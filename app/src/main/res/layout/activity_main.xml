<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:text="VIEW BINDING - JAVA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="VIEW BINDING - KOTLIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJava" />

    <Button
        android:id="@+id/btnVarJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="13dp"
        android:text="VARIABLE - JAVA"
        app:layout_constraintEnd_toStartOf="@+id/btnVarKotlin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnKotlin" />

    <Button
        android:id="@+id/btnVarKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="VARIABLE - KOTLIN"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnVarJava"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnFlowControlJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="FlowControl-J"
        app:layout_constraintStart_toStartOf="@+id/btnVarJava"
        app:layout_constraintTop_toBottomOf="@+id/btnVarJava" />

    <Button
        android:id="@+id/btnFlowControlKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FlowControl-K"
        app:layout_constraintEnd_toEndOf="@+id/btnVarKotlin"
        app:layout_constraintTop_toTopOf="@+id/btnFlowControlJava" />

</androidx.constraintlayout.widget.ConstraintLayout>